@page
@model BouvetØlsmaking.Pages.Breweries.EditModel

@{
    ViewData["Title"] = "Edit";
}
@if (TempData["CustomError"] != null)
{
    <div class="alert alert-danger">
        @TempData["CustomError"]
    </div>

    return;
}
<h2>Edit</h2>

<h4>Brewery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Brewery.BreweryId" />
            <div class="form-group">
                <label asp-for="Brewery.Name" class="control-label"></label>
                <input asp-for="Brewery.Name" class="form-control" />
                <span asp-validation-for="Brewery.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brewery.Country" class="control-label"></label>
                <input asp-for="Brewery.Country" class="form-control" />
                <span asp-validation-for="Brewery.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brewery.Website" class="control-label"></label>
                <input asp-for="Brewery.Website" class="form-control" />
                <span asp-validation-for="Brewery.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
