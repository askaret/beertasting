@page
@model BouvetØlsmaking.Pages.Tastings.CreateModel

@{
    ViewData["Title"] = "Create";
}

@if (TempData["CustomError"] != null)
{
    <div class="alert alert-danger">
        @TempData["CustomError"]
    </div>

    return;
}

<h2>Create</h2>

<h4>Tasting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tasting.Name" class="control-label"></label>
                <input asp-for="Tasting.Name" class="form-control" />
                <span asp-validation-for="Tasting.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasting.Description" class="control-label"></label>
                <input asp-for="Tasting.Description" class="form-control" />
                <span asp-validation-for="Tasting.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasting.TastingDate" class="control-label"></label>
                <input asp-for="Tasting.TastingDate" class="form-control" />
                <span asp-validation-for="Tasting.TastingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Tasting.IsActive" /> @Html.DisplayNameFor(model => model.Tasting.IsActive))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Tasting.IsBlind" /> @Html.DisplayNameFor(model => model.Tasting.IsBlind))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
